{
  "name": "react-ogl",
  "version": "0.1.0",
  "description": "A barebones react renderer for OGL.",
  "bugs": {
    "url": "https://github.com/pmndrs/react-ogl/issues"
  },
  "homepage": "https://github.com/pmndrs/react-ogl",
  "repository": "https://github.com/pmndrs/react-ogl.git",
  "author": "Cody Bennett (https://github.com/codyjasonbennett)",
  "license": "MIT",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./": {
      "require": "./dist/",
      "import": "./dist/"
    }
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "babel-jest": "^27.3.1",
    "eslint": "^8.2.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^27.3.1",
    "ogl": "^0.0.76",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0"
  },
  "dependencies": {
    "react-merge-refs": "^1.1.0",
    "react-reconciler": "^0.26.2",
    "react-use-measure": "^2.0.4"
  },
  "peerDependencies": {
    "ogl": ">=0.0.72",
    "react": ">=17.0",
    "react-dom": ">=17.0"
  },
  "peerDependenciesMeta": {
    "react-dom": {
      "optional": true
    }
  },
  "scripts": {
    "dev": "cd demo && yarn && yarn dev",
    "build": "rimraf dist && rollup -c",
    "test": "jest",
    "lint": "prettier src --check && eslint src",
    "lint-fix": "prettier src --write && eslint src --fix"
  }
}
